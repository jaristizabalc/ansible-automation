---
- hosts: localhost
  vars:
    packages: 
      - python-pip
      - ssh
    pip_packages: [avisdk, pyvim, pyvmomi]
  tasks:
  - name: install packages
    apt: name='{{ packages }}' state=latest
    when: ansible_distribution == 'Debian' or ansible_distribution == 'Ubuntu'

  - name: 'installing packages'
    yum: name='{{ packages }}' state=latest
    when: ansible_distribution == 'CentOS' or ansible_distribution == 'Red Hat Enterprise Linux'
    
  - name: 'install prerequisites: avisdk, pyvim, and pyvmomi'
    pip:
      name: '{{ pip_packages }}'
        
  - name: installing ovftool
    become: yes
    command: '../roles/avinetworks.avicontroller-vmware/files/VMware-ovftool-3.1.0-2459827-lin.x86_64.bundle --eulas-agreed --required --console'
